<header class="bg-red-500 flex py-2 pl-1 pr-2 justify-between rounded-b-sm">
  <div class="flex justify-start">
    <%= link "ðŸ¥ž DenDash", class: "text-yellow-400 text-2xl font-bold pr-2 no-underline", to: Routes.page_path(@conn, :index) %>
  </div>

  <div class="flex items-center">
    <div class="justify-self-end">
      <%= if @conn.assigns[:me] do %>
        <p><%= link "Log out", to: Routes.login_path(@conn, :logout), class: "button-red" %></p>
      <% else %>
        <%= link "Log in", class: "button-blue", to: Routes.login_path(@conn, :login) %>
      <% end %>
    </div>
  </div>
</header>

<%= if @conn.assigns[:title] do %>
  <h1 class="mt-2 mb-4 underline underline-offset-8 decoration-wavy text-center"><%= @title %></h1>
<% end %>

<div class="flex justify-center flex-col">
  <p class="rounded text-center [&:not(:empty)]:p-2 [&:not(:empty)]:mb-2 mx-4 bg-blue-400"><%= get_flash(@conn, :info) %></p>
  <p class="rounded text-center [&:not(:empty)]:p-2 [&:not(:empty)]:mb-2 mx-4 bg-red-400"><%= get_flash(@conn, :error) %></p>
</div>

<main class="mx-2">
  <%= @inner_content %>
</main>
